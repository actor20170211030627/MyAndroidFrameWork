<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="counterTextColor" parent="Base.TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <!--TextInputLayout: 如果EditText中输入长度没超过,下方counter的颜色-->
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="counterOverflowTextColor" parent="Base.TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <!--TextInputLayout: 如果EditText中输入长度超过了,hint和下划线的提示-->
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HintAppearance" parent="TextAppearance.AppCompat">
        <!--TextInputLayout: 获取焦点后,上面Label的颜色,大小-->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>