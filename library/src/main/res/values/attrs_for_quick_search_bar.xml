<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--这是QuickSearchBar的属性-->
    <declare-styleable name="QuickSearchBar">

        <!--默认背景, 默认透明-->
        <attr name="qsbBackgroundNormal" format="reference|color" />

        <!--按下时背景, 有默认值-->
        <attr name="qsbBackgroundPressed" format="reference|color" />

        <!--正常字体颜色, 默认#8c8c8c-->
        <attr name="qsbTextColorNormal" format="color" />

        <!--按下时的字体颜色, 默认colorAccent-->
        <attr name="qsbTextColorPressed" format="color" />

        <!--字体大小, 默认10sp-->
        <attr name="qsbTextSize" format="dimension" />
    </declare-styleable>
</resources>