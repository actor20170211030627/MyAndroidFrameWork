<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--这是ChatLayout的属性-->
    <declare-styleable name="ChatLayout">

        <!--左边语音按钮是否显示-->
        <attr name="clIvVoiceVisiable" format="enum" >
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>

        <!--右边表情按钮是否显示-->
        <attr name="clIvEmojiVisiable" format="enum" >
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>

        <!--右边⊕按钮是否显示-->
        <attr name="clIvPlusVisiable" format="enum" >
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>

        <!--"发送"按钮的背景(默认有一个蓝色selector)-->
        <attr name="clBtnSendBackground" format="reference|color" />

        <!--多少时间内的录音算太短, 默认500ms-->
        <attr name="clTooShortRecordingTimeMs" format="integer" />
    </declare-styleable>
</resources>