<resources>    <style name="BaseRightDialog" parent="BaseDialog">        <!--设置弹窗动画样式-->        <item name="android:windowAnimationStyle">@style/BaseRightDialogAnim</item>    </style>    <style name="BaseRightDialogAnim">        <!--进入动画-->        <item name="android:windowEnterAnimation">@anim/right_slide_in</item>        <!--退出动画-->        <item name="android:windowExitAnimation">@anim/right_slide_out</item>    </style></resources>