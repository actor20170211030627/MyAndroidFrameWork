<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Space
        android:id="@+id/space_margin_top_for_isl"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:id="@+id/ll_content_for_isl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_red_star_for_isl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* "
            android:textColor="#D90000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_item_for_isl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="90dp"
            android:textColor="#333333"
            android:textSize="17sp"
            tools:text="islItemNameï¼š" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_for_isl"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:dropDownVerticalOffset="45.5dp"
            android:spinnerMode="dropdown" />
    </LinearLayout>
</LinearLayout>