<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.actor.myandroidframework">

    <!--网络请求-->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--安装/更新App-->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <!--Album的权限,拍照,图片选择,图片大图预览(包括网络图片)-->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--sdcard中创建文件夹的权限-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许挂载和反挂载文件系统可移动存储-->
    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"><!--Android P(9.0)的默认所有Http的请求都被阻止, 并且这个属性的默认值从true改变为false-->

        <!--悬浮评论-->
        <activity
            android:name=".widget.floatingeditor.FloatEditorActivity"
            android:theme="@style/NoTitleDialogTheme"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize"></activity>
    </application>
</manifest>
