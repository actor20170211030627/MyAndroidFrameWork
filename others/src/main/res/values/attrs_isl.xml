<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ItemSpinnerLayout">

        <!--左边的红点是否显示-->
        <attr name="islRedStarVisiable" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>

        <!--左边的文字-->
        <attr name="islItemName" format="string"/>

        <!--给spinner设置本地数据源, 用','分隔开-->
        <attr name="islEntriesString" format="string" />

        <!--给spinner设置本地数据源, 写在values/arrays.xml里, 示例:@array/languages-->
        <attr name="islEntries" format="reference"/>

        <!--marginTop距离顶部的间距, 默认1dp-->
        <attr name="islMarginTop" format="dimension" />

        <!--主container的最小高度, 默认49dp-->
        <attr name="islContainerMinHeight" format="dimension" />

        <!--不使用默认布局, 自定义布局-->
        <attr name="islCustomLayout" format="reference" />
    </declare-styleable>
</resources>